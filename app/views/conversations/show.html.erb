<div class="d-flex flex-column vh-100">
  <div class="d-flex align-items-center gap-3 my-2">
    <a href="/" class="btn">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
      </svg>
    </a>

    <div class="fs-5">
      #<%= @conversation.id %>
    </div>
  </div>

  <div class="flex-grow-1 d-flex flex-column-reverse overflow-auto">
    <div id="messages" class="d-flex flex-column gap-3">
      <%= render partial: "messages/message", collection: @conversation.messages %>
    </div>
  </div>

  <div class="py-3">
    <%= render partial: "messages/form" %>
  </div>
</div>

<%= turbo_stream_from @conversation, :messages %>
